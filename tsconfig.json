{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
    "@/*": ["./src/*"]
  }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  
}
